<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobAppTracker.Maui.Views.NewCompanyContactPage"
             Title="NewCompanyContactPage">
    <ScrollView>
        <VerticalStackLayout Padding ="15" Spacing="10" HorizontalOptions="Center">
            <Label Text="Add A Company Contact" FontAttributes="Bold" />
            <Entry Text="{Binding Name}" Placeholder="Contact Name" />
            <Entry Text="{Binding Email}" Placeholder="Email"/>
            <Entry Text="{Binding Phone}" Placeholder="Phone Number"/>

            <Button Text="Save Contact"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="SeaGreen"
                    TextColor="White"
                    WidthRequest="200"
                    HeightRequest="50"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>