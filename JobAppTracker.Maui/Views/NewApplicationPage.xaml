<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobAppTracker.Maui.Views.NewApplicationPage"
             Title="New Application">
    <VerticalStackLayout Padding="15" Margin="15" HorizontalOptions="Center" VerticalOptions="Center">
        <Entry Placeholder="Job Title" Text= "{Binding JobTitle}" />
        <Entry Placeholder="Job Description" Text= "{Binding JobDescription}" />
        <Entry Placeholder="Status (Applied, Interviewed, Rejected" Text="{Binding Status}"/>
        <DatePicker Date="{Binding ApplicationDate}" />

        <Label Text="Company" FontAttributes="Bold" />

        <Picker x:Name="ComapnyPicker"
                Title="Select Company"
                ItemsSource="{Binding Companies}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedCompany}"/>

        <Button Text="Add a new company"
                Command="{Binding AddCompanyCommand}"
                BackgroundColor="SlateGray"
                TextColor="White"
                HorizontalOptions="Center"/>
        

        <Button Text="Save"
                x:Name="SaveButton"
                Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</ContentPage>