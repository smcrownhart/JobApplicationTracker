<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobAppTracker.Maui.Views.EditComapnyPage"
             Title="EditComapnyPage">
    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10" HorizontalOptions="Center">
            <Label Text="Edit Company" FontAttributes="Bold" />
            <Entry Text="{Binding Name}" />
            <Entry Text="{Binding Website}" />
            
            <Button Text="Save" 
                    Command="{Binding SaveCommand}"
                    BackgroundColor="SeaGreen"
                    TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>