<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobAppTracker.Maui.Views.NewCompanyPage"
             Title="Add Company">
    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10" HorizontalOptions="Center">
            <Entry Text="{Binding Name}" Placeholder="Company Name" />
            <Entry Text="{Binding Website}" Placeholder="Company Website" />
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="SeaGreen"
                    TextColor="White"
                    WidthRequest="200"
                    HeightRequest="50"
                    HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>