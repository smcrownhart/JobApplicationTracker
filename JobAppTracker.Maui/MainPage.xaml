<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobAppTracker.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="job_search.jpg"
                HeightRequest="100"
                Aspect="AspectFit"
                SemanticProperties.Description="magnifying glass over tablet" />

            <Label
                Text="Job App Tracker"
                Style="{StaticResource Headline1}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Track your job applications, interviews, and more"
                Style="{StaticResource SubHeadline1}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="An app that organizes your job search" />

            <Button
                x:Name="Application"
                Text="Applications" 
                SemanticProperties.Hint="View, Add, Edit, Delete Applications"
                Clicked="OnViewApplicationsClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
